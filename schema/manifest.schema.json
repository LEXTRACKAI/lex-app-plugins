{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lex App Plugin Manifest",
  "description": "Defines the metadata each mini-app must supply to register with Lex App",
  "type": "object",
  "required": ["appId", "version", "name", "entryPoint", "routes"],
  "properties": {
    "appId": {
      "type": "string",
      "description": "Unique identifier, e.g. \"inventory-manager\""
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version, e.g. \"1.0.0\""
    },
    "name": {
      "type": "string",
      "description": "Human-readable title, e.g. \"Inventory Manager\""
    },
    "description": {
      "type": "string",
      "description": "Short blurb about the app’s purpose"
    },
    "iconUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL to a 64×64 PNG/SVG icon"
    },
    "entryPoint": {
      "type": "string",
      "format": "uri",
      "description": "Where to load the app, e.g. Docker image URL or JS bundle URL"
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^/apps/.+"
      },
      "description": "Path(s) under `/apps` where this mini-app will mount"
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "(optional) API scopes or data-access permissions"
    },
    "createdBy": {
      "type": "string",
      "description": "(optional) Identifier of who published this app"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "(optional) ISO 8601 timestamp"
    }
  },
  "additionalProperties": false
}
